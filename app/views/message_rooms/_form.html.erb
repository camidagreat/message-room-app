<div class="w-75 m-auto">
  <%= form_with(model: message_room, local: true) do |form| %>
    <% if message_room.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(message_room.errors.count, "error") %> prohibited this message_room from being saved:</h2>

        <ul>
        <% message_room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label :blurb %>
      <%= form.text_field :blurb, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.hidden_field :creator_id, value: current_user.id %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-primary"%>
    </div>
  <% end %>

</div>
