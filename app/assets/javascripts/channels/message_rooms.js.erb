this.App = {};

App.cable = ActionCable.createConsumer();

App.messages = App.cable.subscriptions.create('MessagesChannel', {
  received: function(data) {
    $("#new-message-target").removeClass('hidden')
    return $('#new-message-target').append(this.renderMessage(data));
  },

  renderMessage: function(data) {
    const scrollToBottom = "<script>$('.messages').scrollTop($('.messages')[0].scrollHeight);</script>";
    const targetDiv = "<div class='panel-body hidden' id='new-message-target'></div>"
    
    return data.message + targetDiv + scrollToBottom;
  }
});
